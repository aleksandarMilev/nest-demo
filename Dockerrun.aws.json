{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "aleksandarmilev/nest-demo-client:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [{ "containerPort": 80, "hostPort": 80 }],
      "links": ["api"]
    },
    {
      "name": "api",
      "image": "aleksandarmilev/nest-demo-api:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [{ "containerPort": 3000 }],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3000" }
      ],
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      }
    },
    {
      "name": "worker",
      "image": "aleksandarmilev/nest-demo-worker:latest",
      "essential": false,
      "memory": 128,
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3001" }
      ],
      "links": ["api"]
    }
  ]
}
